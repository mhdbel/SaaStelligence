# ============================================
# SAAStelligence Engine Configuration
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!
# ============================================

# ----- Environment -----
ENVIRONMENT=development  # development, staging, production
DEBUG=false
TESTING=false

# ----- Server -----
HOST=0.0.0.0
PORT=8000
WORKERS=1

# ----- Logging -----
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ----- Security -----
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-min-32-chars
API_KEY=your-api-key-for-clients
REQUIRE_API_KEY=false

# Comma-separated list of allowed origins, or * for all
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# ----- Rate Limiting -----
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_GENERATE=30/minute
RATE_LIMIT_REPORT=10/minute

# ----- Paths -----
# Leave blank to use defaults (relative to project root)
INTENT_MODEL_PATH=
CONVERSIONS_DATA_PATH=

# ----- OpenAI Configuration -----
# Required for dynamic ad generation
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=500
OPENAI_TIMEOUT=30

# ----- Agent Configuration -----
BASE_BID=10.0
DEFAULT_CPA_BUDGET=45.0
MAX_QUERY_LENGTH=1000
MIN_CONFIDENCE_THRESHOLD=0.3
MODEL_CACHE_TTL=3600
AGENT_MAX_WORKERS=4
RETARGET_BASE_URL=https://ads.example.com/retarget

# ----- External Integrations (Optional) -----
META_ACCESS_TOKEN=
GOOGLE_ADS_CLIENT_ID=
GOOGLE_CREDENTIALS_PATH=
HUBSPOT_API_KEY=
